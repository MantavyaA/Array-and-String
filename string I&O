#include <iostream>
using namespace std;

int main() {
    int arr[5];
    int x;

    cout << "Enter numbers to enter in array:\n";
    for (int i = 0; i < 5; i++) {
        cin >> arr[i];
    }

    cout << "\nPress 1 to display array:\n";
    cin >> x;
    cout << "\n";

    if (x == 1) {
        cout << "The array is:\n";
        for (int j = 0; j < 5; j++) {
            cout << arr[j] << " ";
        }
        cout << endl;
    } else {
        cout << "Have a nice day :)" << endl;
    }

    return 0;
}

OUTPUT: 

Enter numbers to enter in array:
10 20 30 40 50

Press 1 to display array:
1

The array is:
10 20 30 40 50 

