#include <iostream>
using namespace std;

int main() {
    int arr[50], num, temp, i, j;

    cout << "Enter the number of elements you want in your array: ";
    cin >> num;

    if (num <= 0) {
        cout << "Invalid input." << endl;
        return 0;
    }

    for (i = 0; i < num; i++) {
        cout << "Element " << i + 1 << ": ";
        cin >> arr[i];
    }

    cout << "Original array: {";
    for (i = 0; i < num; i++) {
        cout << arr[i];
        if (i != num - 1) cout << ", ";
    }
    cout << "}" << endl;

    for (i = 0, j = num - 1; i < num / 2; i++, j--) {
        temp = arr[i];
        arr[i] = arr[j];
        arr[j] = temp;
    }

    cout << "Reversed array: {";
    for (i = 0; i < num; i++) {
        cout << arr[i];
        if (i != num - 1) cout << ", ";
    }
    cout << "}" << endl;

    return 0;
}


OUTPUT :
Original array: {10, 20, 30, 40, 50}
Reversed array: {50, 40, 30, 20, 10}
