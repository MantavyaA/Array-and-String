// To check if a string is a palindrome or not 

#include <iostream>
#include <string>
using namespace std;


int main() {
    string str;
    int count = 0;

    cout << "Enter a string: ";
    cin >> str;  

    int n = str.length();

    for (int i = 0; i < n / 2; i++) {
        if (str[i] != str[n - 1 - i]) {
            count = 1; 
            break;
        }
    }

    if (count == 0)
        cout << "The string is a palindrome." << endl;
    else
        cout << "The string is not a palindrome." << endl;

    return 0;
}


EXPECTED OUTPUT :
Enter a string : mom
The string is a palindrome
